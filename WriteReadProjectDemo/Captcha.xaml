<Window x:Class="WriteReadProjectDemo.Captcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WriteReadProjectDemo"
        mc:Ignorable="d"
        Title="Captcha" Height="250" Width="450">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
            <Image Name="CaptchaImage" Height="100" Width="150"></Image>
            <TextBox BorderBrush="Black" Name="tbCheckedCaptcha"></TextBox>
            <Button Content="Проверить" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
